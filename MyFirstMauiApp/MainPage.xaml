<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp.PetAdoptionPage"
             BackgroundColor="#FFFFFF">

    <Grid RowSpacing="0">
        <!-- Define 5 Main Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Row 0: Header with Name and ID -->
        <Grid Grid.Row="0" 
              BackgroundColor="#5B21B6" 
              Padding="20,50,20,20">
            <Label Text="PEGGY BONG JIA YEE BCS23090005"
                   TextColor="White"
                   FontSize="20"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineHeight="1.3" />
        </Grid>

        <!-- Row 1: Pet Image -->
        <Grid Grid.Row="1" HeightRequest="280">
            <Image Source="C:\Users\Peggy Bong\source\repos\MyFirstMauiApp\MyFirstMauiApp\Resources\Images\hehe.jpg"
                   Aspect="AspectFill"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand" />
        </Grid>

        <!-- Row 2: Pet Info Card -->
        <Grid Grid.Row="2" Padding="20,0">
            <Frame BackgroundColor="#FFF8E7"
                   CornerRadius="20"
                   Margin="0,-30,0,0"
                   Padding="20,25"
                   HasShadow="True">
                <Grid RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Pet Name and Gender -->
                    <Grid Grid.Row="0" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="Oshawott"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#1F2937"
                               VerticalOptions="Center" />

                        <Label Grid.Column="1"
                               Text="♂"
                               FontSize="26"
                               TextColor="#6B7280"
                               VerticalOptions="Center" />
                    </Grid>

                    <!-- Breed and Age -->
                    <Grid Grid.Row="1" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="Sea Otter Pokémon"
                               FontSize="16"
                               TextColor="#6B7280"
                               VerticalOptions="Center" />

                        <HorizontalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="🕐"
                                   FontSize="16"
                                   VerticalOptions="Center" />
                            <Label Text="1 year old"
                                   FontSize="16"
                                   TextColor="#6B7280"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Address -->
                    <HorizontalStackLayout Grid.Row="2" Spacing="8">
                        <Label Text="📍"
                               FontSize="16"
                               VerticalOptions="Start"
                               Margin="0,2,0,0" />
                        <Label Text="3B,Lorong 88, Taman Rantau Panjang,&#10;96000 Sibu, Sarawak"
                               FontSize="14"
                               TextColor="#9CA3AF"
                               LineBreakMode="WordWrap" />
                    </HorizontalStackLayout>
                </Grid>
            </Frame>
        </Grid>

        <!-- Row 3: Owner Info and Description -->
        <Grid Grid.Row="3" Padding="20" RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Owner Info -->
            <Grid Grid.Row="0" ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Owner Avatar -->
                <Frame Grid.Column="0"
                       WidthRequest="55"
                       HeightRequest="55"
                       CornerRadius="27.5"
                       Padding="0"
                       IsClippedToBounds="True"
                       HasShadow="False"
                       BackgroundColor="#E5E7EB">
                    <Image Source="C:\Users\Peggy Bong\source\repos\MyFirstMauiApp\MyFirstMauiApp\Resources\Images\kiut.png"
                           Aspect="AspectFill" />
                </Frame>

                <!-- Owner Details -->
                <VerticalStackLayout Grid.Column="1" 
                                     VerticalOptions="Center"
                                     Spacing="2">
                    <Label Text="Lycoris"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1F2937" />
                    <Label Text="Owner"
                           FontSize="13"
                           TextColor="#9CA3AF" />
                </VerticalStackLayout>

                <!-- Date -->
                <Label Grid.Column="2"
                       Text="1.11.2024"
                       FontSize="13"
                       TextColor="#9CA3AF"
                       VerticalOptions="Center" />
            </Grid>

            <!-- Description -->
            <Label Grid.Row="1"
                   Text="Hi! Oshawott the starter Pokemon is a cutie carrying a pale yellow seashell on its belly!"
                   FontSize="14"
                   TextColor="#6B7280"
                   LineBreakMode="WordWrap" />
        </Grid>

        <!-- Row 4: Action Buttons -->
        <Grid Grid.Row="4" 
              Padding="20,0,20,25"
              ColumnSpacing="15"
              VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Favorite Button -->
            <Frame Grid.Column="0"
                   WidthRequest="60"
                   HeightRequest="60"
                   CornerRadius="30"
                   Padding="0"
                   HasShadow="True"
                   BackgroundColor="White"
                   BorderColor="#E5E7EB"
                   VerticalOptions="Center">
                <Label Text="♡"
                       FontSize="30"
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Adoption Button -->
            <Button Grid.Column="1"
                    Text="Adoption"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="#FCD34D"
                    TextColor="#1F2937"
                    CornerRadius="30"
                    HeightRequest="60"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand" />
        </Grid>

    </Grid>

</ContentPage>